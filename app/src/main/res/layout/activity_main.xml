<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CCA9DD"
    android:orientation="vertical"
    android:layerType="software">

    <TextView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#673AB7"
        android:gravity="center|start"
        android:padding="20dp"
        android:text="Data Diri"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:cornerRadius="0dp"
        app:iconPadding="0dp"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="246dp"
        android:layout_marginTop="40dp"
        android:contentDescription="Foto Profil"
        app:srcCompat="@drawable/whatsapp_image_2025_07_16_at_12_53_24_c162363e"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Nama: Audina Deshifa Nurani"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="TTL: Surakarta, 28 Desember 2008"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Alamat: Surakarta"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Status: Siswa"
        android:textColor="#FFFFFF"
        android:textSize="23sp"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:text="Lanjut"
        android:textColor="#FFFFFF"
        android:background="#FF8DA1"
        android:textSize="16sp"
        app:cornerRadius="0dp"/>
</LinearLayout>